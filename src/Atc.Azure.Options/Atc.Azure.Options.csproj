<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
  </PropertyGroup>

<PropertyGroup>
	<Nullable>enable</Nullable>
	<LangVersion>9.0</LangVersion>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<PackageProjectUrl>https://github.com/atc-net/atc-azure-options</PackageProjectUrl>
	<RepositoryUrl>https://github.com/atc-net/atc-azure-options</RepositoryUrl>
	<RepositoryType>git</RepositoryType>
	<NeutralLanguage>en</NeutralLanguage>
	<PackageTags>options;Azure;Keyvault;Cosmos;StorageAccount;Serialization</PackageTags>
	<Authors>atc-net</Authors>
	<Description>Library for common settings</Description>
	<Product>Atc.Azure.Options</Product>
	<PackageId>Atc.Azure.Options</PackageId>
</PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Azure.Services.AppAuthentication" Version="1.6.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="3.1.20" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="3.1.20" />
    <PackageReference Include="Microsoft.Extensions.Configuration.AzureKeyVault" Version="3.1.20" />
    <PackageReference Include="Microsoft.Azure.KeyVault" Version="3.0.5" />
    <PackageReference Include="System.Text.Json" Version="5.0.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.AzureKeyVault" Version="3.1.6" />
  </ItemGroup>

</Project>